<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainPageBackground">

    <fragment
        android:id="@+id/tab_bar_container"
        android:name="com.hezhiheng.musicplayer.ui.main.TabBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />
    
    <FrameLayout
        android:id="@+id/main_page_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_page_header_container"
        app:layout_constraintBottom_toTopOf="@+id/tab_bar_container"
        />
</androidx.constraintlayout.widget.ConstraintLayout>